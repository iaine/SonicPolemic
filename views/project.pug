        |          sound:
        input(type='text', id='Qwave', name='wave', value='sine')
        |          sound:
        input(type='text', id='Qnote', name='note', value='261.25')
        p='KO'
        |          x:
        input(type='text', id='KOx', name='x', value='')
        |          y:
