extends layout

block content
    h1= title

    canvas(id='myCanvas')
    ul
        li(id='annote',onmouseover='stopFilter()')= "Stop"
        each variable in variables
            li(id='annote',onmouseover='setFilter("' + variable + '")')= variable

    form(method='POST' action='/project/' + title)
        p='OK'
        |          x:
        input(type='text', id='OKx', name='x', value='')
        |          y:
        input(type='text', id='OKy', name='y', value='')
        |          z:
        input(type='text', id='OKz', name='z', value='')
        |          sound:
        input(type='text', id='OKwave', name='wave', value='sine')
        |          sound:
        input(type='text', id='OKnote', name='note', value='261.25')

        p='REF'
        |          x:
        input(type='text', id='REFx', name='x', value='')
        |          y:
